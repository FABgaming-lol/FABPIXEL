    {
      icon: <Palette className="h-10 w-10" />,
      title: "Brand Identity",
      description: "Crafting unique visual identities that tell your story"
    },
    {
      icon: <Brush className="h-10 w-10" />,
      title: "UI/UX Design",
      description: "Intuitive interfaces that enhance user experiences"
    },
    {
      icon: <Zap className="h-10 w-10" />,
      title: "Motion Graphics",
      description: "Dynamic visuals that bring your brand to life"
    }
  ];

  return (
    <div className="min-h-screen bg-background text-foreground transition-colors duration-500 overflow-hidden relative">
      {/* Custom Background */}
      <div 
        className="fixed inset-0 -z-10 bg-cover bg-center bg-no-repeat"
        style={{ backgroundImage: `url(${backgroundImage})` }}
      >
        <div className="absolute inset-0 bg-background/80 dark:bg-background/90"></div>
      </div>

      {/* Header */}
      <header className="container mx-auto px-4 py-6 flex justify-between items-center relative z-10">
        <motion.div
          initial={{ opacity: 0, x: -20 }}
          animate={{ opacity: 1, x: 0 }}
          transition={{ duration: 0.5 }}
          className="flex items-center gap-3"
        >
          {/* Logo Placeholder */}
          <div className="bg-gradient-to-br from-blue-500 to-purple-600 w-12 h-12 rounded-lg flex items-center justify-center">
            <span className="text-white font-bold text-xl">FP</span>
          </div>
          <div>
            <h1 className="text-2xl font-bold">FABPIXEL</h1>
            <p className="text-xs text-muted-foreground -mt-1">Creative Studio</p>
          </div>
        </motion.div>
        
        <motion.div
          initial={{ opacity: 0, x: 20 }}
          animate={{ opacity: 1, x: 0 }}
          transition={{ duration: 0.5 }}
          className="flex items-center gap-2"
        >
          <Button 
            variant="ghost" 
            size="icon" 
            onClick={toggleTheme}
            aria-label="Toggle theme"
            className="rounded-full border border-border"
          >
            {theme === "light" ? (
              <Moon className="h-5 w-5" />
            ) : (
              <Sun className="h-5 w-5" />
            )}
          </Button>
        </motion.div>
      </header>

      {/* Hero Section */}
      <section className="container mx-auto px-4 py-12 md:py-20 relative z-10">
        <div className="flex flex-col lg:flex-row items-center gap-12">
          <motion.div 
            className="flex-1"
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ duration: 0.7 }}
          >
            <h2 className="text-4xl md:text-5xl lg:text-6xl font-bold max-w-2xl mb-6">
              Transforming Ideas Into <span className="text-primary">Visual Experiences</span>
            </h2>
