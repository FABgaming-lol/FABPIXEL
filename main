          <div className="flex flex-col md:flex-row justify-between items-center">
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              whileInView={{ opacity: 1, y: 0 }}
              viewport={{ once: true }}
              transition={{ duration: 0.5 }}
              className="mb-6 md:mb-0 flex items-center gap-3"
            >
              <div className="bg-gradient-to-br from-blue-500 to-purple-600 w-10 h-10 rounded-lg flex items-center justify-center">
                <span className="text-white font-bold">FP</span>
              </div>
              <div>
                <h3 className="text-xl font-bold">FABPIXEL</h3>
                <p className="text-xs text-muted-foreground -mt-1">Creative Studio</p>
              </div>
            </motion.div>
            
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              whileInView={{ opacity: 1, y: 0 }}
              viewport={{ once: true }}
              transition={{ duration: 0.5, delay: 0.1 }}
              className="flex flex-col items-center md:items-end"
            >
              <p className="text-muted-foreground mb-2">contact@fabpixel.com</p>
              <p className="text-muted-foreground">+1 (555) 123-4567</p>
            </motion.div>
          </div>
          <motion.div
            initial={{ opacity: 0 }}
            whileInView={{ opacity: 1 }}
            viewport={{ once: true }}
            transition={{ duration: 0.5, delay: 0.2 }}
            className="mt-12 pt-8 border-t border-border text-center text-muted-foreground"
          >
            <p>Â© {new Date().getFullYear()} FABPIXEL. All rights reserved.</p>
          </motion.div>
        </div>
      </footer>
    </div>
  );
