            {/* Banner Placeholder */}
            <div className="relative rounded-2xl overflow-hidden border border-border shadow-2xl">
              <div className="bg-gradient-to-br from-blue-400 to-purple-500 w-full h-80 md:h-96 flex items-center justify-center">
                <div className="text-white text-center p-6">
                  <h3 className="text-2xl font-bold mb-2">FABPIXEL Banner</h3>
